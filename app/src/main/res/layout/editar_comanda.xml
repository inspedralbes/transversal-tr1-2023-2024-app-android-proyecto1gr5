<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nom_comanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Margarita"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/categoria_producte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizzes" />

    <TextView
        android:id="@+id/preu_quant_producte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9,99 €   x2" />

    <Button
        android:id="@+id/boto_modificar_quantitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar quantitat" />

    <Button
        android:id="@+id/boto_eliminar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Eliminar" />

    <!-- Puedes agregar más vistas aquí según tus necesidades -->

</LinearLayout>
