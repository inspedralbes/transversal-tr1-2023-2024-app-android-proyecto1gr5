<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_producte"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        app:srcCompat="@drawable/pizza_margarita" />

    <TextView
        android:id="@+id/nom_producte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Margarita"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/categoria_producte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizzes" />

    <!-- Puedes agregar más vistas aquí según tus necesidades -->

</LinearLayout>
